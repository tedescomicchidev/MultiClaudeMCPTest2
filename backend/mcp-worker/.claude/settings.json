{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/trigger-reviewer.sh",
            "timeout": 30,
            "statusMessage": "Checking for commit to trigger reviewer..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/trigger-committer.sh",
            "timeout": 30,
            "statusMessage": "Checking for review commit to trigger committer..."
          }
        ]
      }
    ]
  }
}
